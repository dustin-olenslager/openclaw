{
  "chrome_process_limits": {
    "max_processes": 8,
    "max_memory_mb": 800,
    "enable_process_limiting": true,
    "enable_dormant_mode": true,
    "startup_mode": "minimal"
  },
  "chrome_flags": {
    "process_limiting": [
      "--max-renderer-processes=2",
      "--max-plugin-processes=1", 
      "--max-utility-processes=2",
      "--max-zygote-processes=1",
      "--renderer-process-limit=2",
      "--single-process-tabs",
      "--process-per-tab=false",
      "--disable-background-mode",
      "--disable-background-timer-throttling",
      "--disable-renderer-backgrounding",
      "--disable-backgrounding-occluded-windows"
    ],
    "memory_optimization": [
      "--memory-pressure-off",
      "--max_old_space_size=256",
      "--aggressive-cache-discard",
      "--disable-background-networking",
      "--disable-background-timer-throttling",
      "--disable-component-update",
      "--disable-sync",
      "--disable-features=VizDisplayCompositor,TranslateUI,BlinkGenPropertyTrees"
    ],
    "headless_container": [
      "--headless=new",
      "--no-sandbox",
      "--disable-setuid-sandbox",
      "--disable-dev-shm-usage",
      "--disable-gpu",
      "--disable-gpu-compositing",
      "--disable-gpu-rasterization",
      "--disable-software-rasterizer",
      "--disable-web-security",
      "--disable-features=VizDisplayCompositor"
    ],
    "dormant_mode": [
      "--disable-extensions",
      "--disable-plugins",
      "--disable-default-apps",
      "--disable-background-mode",
      "--disable-background-networking",
      "--disable-component-extensions",
      "--disable-client-side-phishing-detection",
      "--disable-sync",
      "--no-first-run",
      "--no-default-browser-check",
      "--disable-hang-monitor",
      "--disable-prompt-on-repost",
      "--disable-domain-reliability",
      "--disable-ipc-flooding-protection"
    ],
    "stability": [
      "--disable-crash-reporter",
      "--disable-logging",
      "--silent-launch",
      "--no-crash-upload",
      "--disable-breakpad",
      "--disable-metrics",
      "--disable-metrics-reporting"
    ]
  },
  "process_monitoring": {
    "check_interval_seconds": 30,
    "kill_excess_processes": true,
    "max_memory_per_process_mb": 200,
    "processes_to_preserve": ["main", "zygote"],
    "aggressive_cleanup_threshold": 15
  }
}